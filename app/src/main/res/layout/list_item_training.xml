<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/training_list_item_iconImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_margin="16dp"/>

    <LinearLayout
        android:id="@+id/article_button_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_toRightOf="@id/training_list_item_iconImageView"
        >

        <TextView
            android:id="@+id/training_list_item_titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Training_title"
            android:textSize="16sp"
            />
        <!--android:layout_toLeftOf="@id/training_list_item_iconImageView" -->

        <TextView
            android:id="@+id/training_list_item_descriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Training Description"
            android:textSize="14sp"
            android:textColor="#939598"
            />

        </LinearLayout>

</RelativeLayout>
