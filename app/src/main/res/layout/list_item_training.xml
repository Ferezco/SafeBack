<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_margin="16dp">

        <ImageView
            android:id="@+id/training_list_item_iconImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/circle"/>

        <LinearLayout
            android:id="@+id/training_button_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/training_list_item_iconImageView">

            <TextView
                android:id="@+id/training_list_item_titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Training_title"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/training_list_item_descriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Training Description"
                android:textSize="14sp"
                android:textColor="#939598" />

            </LinearLayout>
    </RelativeLayout>
</FrameLayout>