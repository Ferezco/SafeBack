<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/skeleton"
        >

        <RelativeLayout
            android:id="@+id/skeleton_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="100dp"/>

        <TextView
            android:id="@+id/total_force"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:elevation="5dp"/>


        //Skeleton Joint Panel
        <LinearLayout
            android:id="@+id/skeleton_trait_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff8f8f8"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingRight="16dp"
            android:paddingBottom="60dp"
            android:elevation="2dp">

            <Spinner
                android:id="@+id/skeleton_joint_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:entries="@array/joint_control_panel_entries"
                android:layout_marginBottom="16dp"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight=".5">

                        <TextView
                            android:id="@+id/skeleton_trait1_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:textColor="@android:color/black"
                            android:text="Trait 1"
                            />

                        <SeekBar
                            android:id="@+id/skeleton_trait1_slider"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/skeleton_trait1_text"/>

                        <TextView
                            android:id="@+id/skeleton_trait1_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/skeleton_trait1_slider"
                            android:layout_marginTop="20dp"
                            android:text="0"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight=".5">

                        <TextView
                            android:id="@+id/skeleton_trait2_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:textColor="@android:color/black"
                            android:text="Trait 2"
                            />

                        <SeekBar
                            android:id="@+id/skeleton_trait2_slider"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/skeleton_trait2_text"/>

                        <TextView
                            android:id="@+id/skeleton_trait2_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/skeleton_trait2_slider"
                            android:layout_marginTop="20dp"
                            android:text="0"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>
                </TableRow>

                <TableRow>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight=".5">

                        <TextView
                            android:id="@+id/skeleton_trait3_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:textColor="@android:color/black"
                            android:text="Trait 1"
                            />

                        <SeekBar
                            android:id="@+id/skeleton_trait3_slider"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/skeleton_trait3_text"/>

                        <TextView
                            android:id="@+id/skeleton_trait3_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/skeleton_trait3_slider"
                            android:layout_marginTop="20dp"
                            android:text="0"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight=".5">

                        <TextView
                            android:id="@+id/skeleton_trait4_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:textColor="@android:color/black"
                            android:text="Trait 2"
                            />

                        <SeekBar
                            android:id="@+id/skeleton_trait4_slider"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/skeleton_trait4_text"/>

                        <TextView
                            android:id="@+id/skeleton_trait4_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/skeleton_trait4_slider"
                            android:layout_marginTop="20dp"
                            android:text="0"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>


                </TableRow>
            </TableLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/skeleton_user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:text="User Info"
            android:textColor="#ff4a00"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@android:color/white"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:elevation="5dp"/>

        <RelativeLayout
            android:id="@+id/expanded_user_panel"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:layout_alignTop="@id/skeleton_trait_panel"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingRight="16dp"
            android:elevation="7dp"
            android:visibility="invisible">

            <TextView
                android:id="@+id/user_info_expanded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/user_info"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:textColor="#ff4a00"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/user_weight_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_info_expanded"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:text="User Weight: kg"/>

            <SeekBar
                android:id="@+id/user_weight_slider"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_weight_text"
                android:layout_alignParentLeft="true"
                />

            <EditText
                android:id="@+id/user_weight_EditText"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="3"
                android:layout_alignBottom="@id/user_weight_slider"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/user_weight_slider"
                />

            <TextView
                android:id="@+id/user_height_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_below="@id/user_weight_slider"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:text="User Height: cm"/>


            <SeekBar
                android:id="@+id/user_height_slider"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_height_text"
                android:layout_alignParentLeft="true"
                />
            <EditText
                android:id="@+id/user_height_EditText"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="3"
                android:layout_alignBottom="@id/user_height_slider"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/user_height_slider"
                />

            <TextView
                android:id="@+id/box_weight_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="Box Weight: kg"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/user_height_slider"/>

            <SeekBar
                android:id="@+id/box_weight_slider"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/box_weight_text"
                android:layout_alignParentLeft="true"
                />

            <EditText
                android:id="@+id/box_weight_EditText"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="3"
                android:layout_alignBottom="@id/box_weight_slider"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/box_weight_slider"
                />
        </RelativeLayout>

        <ImageButton
            android:id="@+id/expand_user_panel_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignBottom="@id/skeleton_user_info"
            android:layout_above="@id/skeleton_user_info"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_action_back"
            android:rotation="90"
            android:tint="@android:color/white"
            android:background="@drawable/circle"
            android:elevation="10dp"
            />

    </RelativeLayout>

    <fragment android:id="@+id/image_drawer"
        android:layout_width="360dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:name="com.tri.felipe.safeback.View.Skeleton.ImageDrawerFragment"
        tools:layout="@layout/fragment_image_drawer"/>
</android.support.v4.widget.DrawerLayout>
