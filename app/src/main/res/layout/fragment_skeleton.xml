<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:id="@+id/skeleton_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="100dp" />

        <TextView
            android:id="@+id/total_force"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:elevation="5dp"
            android:textSize="22sp"
            android:textStyle="bold" />


        //Skeleton Joint Panel

        <LinearLayout
            android:id="@+id/skeleton_trait_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#fff8f8f8"
            android:elevation="2dp"
            android:orientation="vertical"
            android:paddingBottom="60dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <Button
                android:id="@+id/skeleton_joint_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:background="@android:color/transparent" />


            <!--android:entries="@array/joint_control_panel_entries"-->
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight=".5">

                        <TextView
                            android:id="@+id/skeleton_trait1_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:text="Trait 1"
                            android:textColor="@android:color/black" />

                        <SeekBar
                            android:id="@+id/skeleton_trait1_slider"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/skeleton_trait1_text" />

                        <TextView
                            android:id="@+id/skeleton_trait1_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/skeleton_trait1_slider"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:text="0" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight=".5"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/skeleton_trait2_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:text="Trait 2"
                            android:textColor="@android:color/black" />

                        <SeekBar
                            android:id="@+id/skeleton_trait2_slider"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/skeleton_trait2_text" />

                        <TextView
                            android:id="@+id/skeleton_trait2_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/skeleton_trait2_slider"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:text="0" />

                    </RelativeLayout>
                </TableRow>

                <TableRow>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight=".5">

                        <TextView
                            android:id="@+id/skeleton_trait3_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:text="Trait 1"
                            android:textColor="@android:color/black" />

                        <SeekBar
                            android:id="@+id/skeleton_trait3_slider"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/skeleton_trait3_text" />

                        <TextView
                            android:id="@+id/skeleton_trait3_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/skeleton_trait3_slider"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:text="0" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight=".5"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/skeleton_trait4_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:text="Trait 2"
                            android:textColor="@android:color/black" />

                        <SeekBar
                            android:id="@+id/skeleton_trait4_slider"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/skeleton_trait4_text" />

                        <TextView
                            android:id="@+id/skeleton_trait4_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/skeleton_trait4_slider"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:text="0" />

                    </RelativeLayout>


                </TableRow>
            </TableLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/skeleton_user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@android:color/white"
            android:elevation="5dp"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:text="User Info"
            android:textColor="#ff4a00"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/expanded_user_panel"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_alignTop="@id/skeleton_trait_panel"
            android:background="@android:color/white"
            android:elevation="7dp"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:visibility="invisible">

            <TextView
                android:id="@+id/user_info_expanded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="8dp"
                android:text="@string/user_info"
                android:textColor="#ff4a00"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_weight_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_info_expanded"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/user_weight_EditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/user_weight_text"
                android:ems="3"
                android:inputType="number"
                android:maxLength="3" />

            <SeekBar
                android:id="@+id/user_weight_slider"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/user_weight_EditText"
                android:layout_toLeftOf="@id/user_weight_EditText" />


            <TextView
                android:id="@+id/user_height_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_weight_slider"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/user_height_EditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/user_height_text"
                android:ems="3"
                android:inputType="number"
                android:maxLength="3" />

            <SeekBar
                android:id="@+id/user_height_slider"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/user_height_EditText"
                android:layout_toLeftOf="@id/user_height_EditText" />

            <TextView
                android:id="@+id/box_weight_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_height_slider"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/box_weight_EditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/box_weight_text"
                android:ems="3"
                android:inputType="number"
                android:maxLength="3" />

            <SeekBar
                android:id="@+id/box_weight_slider"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/box_weight_EditText"
                android:layout_toLeftOf="@id/box_weight_EditText" />
        </RelativeLayout>

        <ImageButton
            android:id="@+id/expand_user_panel_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_above="@id/skeleton_user_info"
            android:layout_alignBottom="@id/skeleton_user_info"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/circle"
            android:elevation="10dp"
            android:rotation="90"
            android:src="@drawable/ic_action_back"
            android:tint="@android:color/white" />

    </RelativeLayout>

    <fragment
        android:id="@+id/image_drawer"
        android:name="com.tri.felipe.safeback.View.ImageDrawerFragment"
        android:layout_width="360dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        tools:layout="@layout/fragment_image_drawer" />
</android.support.v4.widget.DrawerLayout>
