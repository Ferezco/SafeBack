<resources>
    <!-- Application Base Theme -->
    <style name="Theme.SafeBack" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/SafeBack_ActionBar</item>
        <item name="android:alertDialogTheme">@style/Theme_SafeBack_Dialog_Alert</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
    </style>

    <!-- Dialog Style-->
    <style name="Theme_SafeBack_Dialog_Alert" parent="@style/Theme_Holo_Dialog_Alert">
        <item name="android:windowTitleStyle">@style/DialogWindowTitle.SafeBack</item>
    </style>
    <!-- Local copy of android:Theme.Holo.Dialog.Alert -->
    <style name="Theme_Holo_Dialog_Alert" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle_Holo</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>

    <!-- Local copy of android:DialogWindowTitle.Holo -->
    <style name="DialogWindowTitle_Holo">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.DialogWindowTitle</item>
    </style>

    <style name="DialogWindowTitle.SafeBack" parent="@style/DialogWindowTitle_Holo">
        <item name="android:textAppearance">@style/TextAppearance.SafeBack.DialogWindowTitle</item>
    </style>

    <style name="TextAppearance.SafeBack.DialogWindowTitle" parent="@android:style/TextAppearance.Holo.DialogWindowTitle">
        <item name="android:textColor">#036bac</item>
    </style>

    <!--Action Bar Color -->
    <style name="SafeBack_ActionBar"
        parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#036bac</item>
    </style>

    <!-- ActionBar for image zoom -->
    <style name="ImageActionBar"
        parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <!-- OverFlow Icon -->
    <style name="OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>

</resources>
